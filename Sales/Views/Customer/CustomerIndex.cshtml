@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Autocomplete", "Search Customers")



<link href="~/css/stylesheet.css" rel="stylesheet" />
<link href="~/css/autocomplete.css" rel="stylesheet" />

@* <partial name="_Autocomplete" /> *@

<br />
<br />
<br />

<h1 class ="attractive-heading">All Customers</h1>

<div style="display: flex;
    justify-content: flex-end;">
    <button class="btn btn-sm btn-primary m-2" id="btnAddCustomer">
        Add Customer
</button>
</div>

<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Province</th>
            <th>District</th>
            <th>VDC/MU</th>
            <th>Ward Number</th>
            <th>Mobile Number</th>
            <th>Email Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>


<div class="modal fade modal" id="CustomerModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Add Customer</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post">
                    <div class="mb-3">
                        <label>Customer Name</label>
                        <input type="text" placeholder="Enter name" class="form-control" id="CName" />
                    </div>
                    <div class="mb-3">
                        <label>Provience</label>
                        <select id="ProvinceId" class="from-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>District</label>
                        <select id="DistrictId" class="from-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>VDC/MU</label>
                        <select id="LocalBodyId" class="from-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Ward Number</label>
                        <input type="number" placeholder="Enter ward number" class="form-control" id="WardNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Mobile Number</label>
                        <input type="text" placeholder="Enter mobile number" class="form-control" id="MobileNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Email Address</label>
                        <input type="email" placeholder="Enter email address" class="form-control" id="Email" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddCustomer();" id="AddCustomer">Save</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade modal" id="EditCustomerModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Edit Customer Record</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post">
                    <div class="mb-3">
                        <label>Customer ID</label>
                        <input type="number" class="form-control" id="CustomerId" disabled="disabled" />
                    </div>
                    <div class="mb-3">
                        <label>Customer Name</label>
                        <input type="text" placeholder="Enter name" class="form-control" id="CEName" />
                    </div>
                    <div class="mb-3">
                        <label>Provience</label>
                        <select id="EProvinceId" class="from-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>District</label>
                        <select id="EDistrictId" class="from-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>VDC/MU</label>
                        <select id="ELocalBodyId" class="from-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Ward Number</label>
                        <input type="number" placeholder="Enter ward number" class="form-control" id="EWardNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Mobile Number</label>
                        <input type="text" placeholder="Enter mobile number" class="form-control" id="EMobileNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Email Address</label>
                        <input type="email" placeholder="Enter email address" class="form-control" id="EEmail" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-warning" onclick="UpdateCustomer();" style="display:none" id="btnUpdate">Update</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/autocomplete.js"></script>
<script src="~/js/customer.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>
