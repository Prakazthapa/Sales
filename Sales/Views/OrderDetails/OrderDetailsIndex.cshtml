@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/orderdetails.js"></script>
<script src="~/js/sweetalert.min.js"></script>



<button class="btn btn-sm btn-primary m-2" id="btnAddOrderDetails">Add Order Details</button>
<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Order Details ID</th>
            <th>Customer ID</th>
            <th>Product ID</th>
            <th>Order ID</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>

<div class="modal fade modal" id="OrderDetailsModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Add Order Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post">
                    <div class="mb-3">
                        <label>Customer ID</label>
                        <select asp-items="@(ViewBag.Customer)" id="CId"></select>

                    </div>
                    <div class="mb-3">
                        <label>Product ID</label>
                        <select asp-items="@(ViewBag.Product)" id="PId"></select>

                    </div>
                    <div class="mb-3">
                        <label>Order ID</label>
                        <select asp-items="@(ViewBag.Order)" id="OId"></select>

                    </div>
                    <div class="mb-3">
                        <label>Quantity</label>
                        <input type="number" placeholder="Enter Quantity" class="form-control" id="Quantity" />
                    </div>
                    <div class="mb-3">
                        <label>Unit Price</label>
                        <input type="number" placeholder="Enter Unit Price" class="form-control" id="UnitPrice" />
                    </div>
                    <div class="mb-3">
                        <label>Total Price</label>
                        <input type="number" placeholder="Enter Total Price" class="form-control" id="TotalPrice" />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddOrderDetails();" id="AddOrderDetails">Save</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade modal" id="EditOrderDetailsModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Edit Order Details Record</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="post">
                    <div class="mb-3">
                        <label>Order Details ID</label>
                        <input type="number" class="form-control" id="OrderDetailsId" disabled="disabled" />
                    </div>
                    <div class="mb-3">
                        <label>Customer ID</label>
                        <select asp-items="@(ViewBag.Customer)" id="CId"></select>

                    </div>
                    <div class="mb-3">
                        <label>Product ID</label>
                        <select asp-items="@(ViewBag.Product)" id="PId"></select>

                    </div>
                    <div class="mb-3">
                        <label>Order ID</label>
                        <select asp-items="@(ViewBag.Order)" id="OId"></select>

                    </div>
                    <div class="mb-3">
                        <label>Quantity</label>
                        <input type="number" placeholder="Enter Quantity" class="form-control" id="EQuantity" />
                    </div>
                    <div class="mb-3">
                        <label>Unit Price</label>
                        <input type="number" placeholder="Enter Unit Price" class="form-control" id="EUnitPrice" />
                    </div>
                    <div class="mb-3">
                        <label>Total Price</label>
                        <input type="number" placeholder="Enter Total Price" class="form-control" id="ETotalPrice" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-warning" onclick="UpdateOrderDetails();" style="display:none" id="btnUpdate">Update</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>






